<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".fragment.ProductDetailFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Product name placeholder" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_price"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Product price placeholder" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_product_description"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_description"
                android:labelFor="@+id/label_description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/default_empty" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_ingredients"
                android:labelFor="@+id/field_ingredients"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_product_ingredients"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_ingredients"
                android:labelFor="@+id/label_ingredients"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/default_empty"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_storing_conditions"
                android:labelFor="@+id/field_storing_conditions"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_product_storing_conditions"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_storing_conditions"
                android:labelFor="@+id/label_storing_conditions"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/default_empty" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_promotions"
                android:labelFor="@+id/field_promotions"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_product_promotions"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_promotions"
                android:labelFor="@+id/label_promotions"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/default_empty" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_producer"
                android:labelFor="@+id/field_producer"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_product_producer"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_producer"
                android:labelFor="@+id/label_producer"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/default_empty" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_producer_url"
                android:labelFor="@+id/field_producer_url"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_product_producer_url"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_producer_url"
                android:labelFor="@+id/label_producer_url"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/default_url"
                android:autoLink="web" />

            <WebView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/webView"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_large"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#cfcfcf"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:contentDescription="Product image" />

        </LinearLayout>
    </ScrollView>

    <CheckedTextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/text_show_more"
        android:id="@+id/btn_toggle_show_more"
        android:checked="false"
        android:visibility="visible"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />

</LinearLayout>